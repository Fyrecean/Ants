{
    "compilerOptions": {
        "typeRoots": ["./node_modules", "./src/types"],
        "types": ["@webgpu/types"],
        "lib": ["es2020", "DOM"],
        "outDir": "public",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "target": "ESNext",
        "skipLibCheck": true,
        "baseUrl": "./src",
        "isolatedModules": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.wgsl" // Include .wgsl files
    ],
}